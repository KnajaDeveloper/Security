    <!-- add menu modal -->
    <div class="modal fade" id="mdAddMenu" level="" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title">เพิ่มเมนู</h5>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <!-- Link -->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">ลิงค์ </label>

                            <div class="col-xs-6">
                                <input id="txtAddLink" type="text" class="form-control"
                                       data-placement="bottom" data-content="กรุณาระบุลิงค์"/>
                            </div>
                        </div>
                        <!-- Menu thai -->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">เมนูภาษาไทย </label>

                            <div class="col-xs-6">
                                <input id="txtAddMenuTh" type="text" class="form-control"
                                       data-placement="bottom" data-content="กรุณาระบุเมนูภาษาไทย"/>
                            </div>
                        </div>
                        <!-- Menu english -->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">เมนูภาษาอังกฤษ </label>

                            <div class="col-xs-6">
                                <input id="txtAddMenuEn" type="text" class="form-control"
                                       data-placement="bottom" data-content="กรุณาระบุเมนูภาษาอังกฤษ"/>
                            </div>
                        </div>
                        <!-- Controller -->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">คอนโทรเลอร์ </label>

                            <div class="col-xs-6">
                                <input id="txtAddController" type="text" class="form-control"
                                       data-placement="bottom" data-content="กรุณาระบุคอนโทรเลอร์"/>
                            </div>
                        </div>
                        <!-- Sequent -->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">ลำดับ </label>

                            <div class="col-xs-6">
                                <input id="txtAddSequent" type="text" class="form-control"
                                       data-placement="bottom" data-content="กรุณาระบุลำดับ"/>
                            </div>
                        </div>
                        <!-- Parent -->
                        <div class="form-group">
                            <label class="control-label col-xs-3">รูทเมนู </label>

                            <div class="col-xs-6">
                                <select id="ddlAddParent" class="form-control"
                                        data-placement="bottom" data-content="">
                                    <option value="0">กรุณาเลือก</option>
                                </select>
                            </div>
                        </div>
                        <!--Icon-->
                        <div class="form-group">
                            <label class="control-label col-xs-3 required">เมนูไอคอน </label>

                            <div class="col-xs-6">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default">
                                        <span id="ddlAddMenuIcon" class=""></span>
                                    </button>
                                    <button type="button" class="icp icp-dd btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <div class="dropdown-menu"><!----></div>
                                </div>
                            </div>
                        </div>
                        <!-- Role -->
                        <div class="form-group">
                            <label class="control-label required col-xs-3">สิทธิ์ </label>

                            <div id="grpAddRule" class="col-xs-6">
                                <jsp:text/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSaveAddMenu" type="button" class="btn btn-primary">บันทึก</button>
                    <button id="btnCancelAdd" type="button" class="btn btn-danger">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>

    <!-- edit menu modal -->
