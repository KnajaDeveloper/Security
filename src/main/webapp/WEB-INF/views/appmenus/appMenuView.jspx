    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="title">เมนูเลเวล 0</div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- add/delete button - menu level 0 -->
                    <div class="form-inline">
                        <div class="form-group">
                            <button id="btnAddMenuLv0" class="btn btn-primary" type="button">เพิ่มเมนู</button>
                            <button id="btnDeleteMenuLv0" class="btn btn-danger" type="button" style="margin-left: 5px;">ลบที่เลือก</button>
                        </div>
                    </div>
                    <!-- table content - menu level 0 -->
                    <div id="penaltyTableContainer" class="table-responsive">
                        <table id="Table" class="table table-bordered table-stripted table-hover">
                            <thead>
                            <tr>
                                <th width="5%" class="text-center">
                                    <input type="checkbox" id="chkCheckAllLv0"/>
                                </th>
                                <th width="5%" class="text-center">แก้ไข</th>
                                <th width="5%" class="text-center">ลำดับ</th>
                                <th width="20%" class="text-center">ลิงค์</th>
                                <th width="5%" class="text-center">ไอคอน</th>
                                <th width="20%" class="text-center">เมนูภาษาไทย</th>
                                <th width="20%" class="text-center">เมนูภาษาอังกฤษ</th>
                                <th width="20%" class="text-center">คอนโทรเลอร์</th>
                            </tr>
                            </thead>
                            <tbody id="tbAppMenuLv0" style="cursor:pointer"></tbody>
                        </table>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <component:pagging id="paggingAppMenuLv0"/>
                        </div>
                    </div>
                </div>  <!-- end div card body -->
            </div>
        </div>
    </div>

